<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/assets/css/skeleton.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <script src="/assets/js/app.js" async defer></script>
</head>

<body>

    <section class="hero">
        <form id="userForm" action="/users" method="POST">
            <div class="container formCnt"></div>
            <h4>New User Page</h4><br />
            <label>
                <span>Username:</span><br />
                <input type="text" name="username" />
            </label>
            <label>
                <span>First Name</span><br />
                <input type="text" name="firstName" />
            </label>
            <label>
                <span>Last Name</span><br />
                <input type="text" name="lastName" />
            </label>
            <label>
                <span>Password:</span><br />
                <input id="pass" type="password" name="password" oninput="ckPass()" />

            </label>
            <span id="errorText" hidden style="color:red">Passwords do not match</span>
            <label>
                <span>Confirm Password:</span><br />
                <input type="password" id="conPass" name="passwordConf" oninput="ckPass()" />
            </label>
            <br>
            <br>
            <input type="submit" id="btnSubmit" disabled="true" value="Create User" />
            </div>
        </form>

    </section>


</body>

</html>